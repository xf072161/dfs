{
	"disable_ai": true,
	"icon_theme": "Zed (Default)",
	"theme": {
		"mode": "system",
		"light": "pph light",
		"dark": "pph dark"
	},
	"ui_font_family": "MonoLisa",
	"buffer_font_family": "MonoLisa",
	"ui_font_size": 14,
	"buffer_font_size": 14,
	"tab_size": 2,
	"vim_mode": true,
	"hard_tabs": true,
	"cursor_blink": false,
	"formatter": "language_server",
	"scrollbar": {
		"show": "auto",
		"axes": {
			"horizontal": false
		}
	},
	"languages": {
		"Go": {
			"tab_size": 4,
			"formatter": {
				"external": {
					"command": "goimports"
				}
			}
		},
		"YAML": {
			"hard_tabs": false
		}
	},
	"lsp": {
		"gopls": {
			"initialization_options": {
				"staticcheck": true,
				"usePlaceholders": true,
				"analyses": {
					"unusedparams": true,
					"ST1000": false
				},
				"buildFlags": [
					"-tags=acceptance,functional"
				]
			}
		}
	},
	"project_panel": {
		"hide_gitignore": false,
		"button": false,
		"folder_icons": false,
		"auto_fold_dirs": false,
		"scrollbar": {
			"show": "never"
		},
		"indent_guides": {
			"show": "never"
		}
	},
	"terminal": {
		"default_height": 9999,
		"button": false,
		"font_size": 13,
		"line_height": "comfortable",
		"toolbar": {
			"breadcrumbs": false
		}
	},
	// disable bunch of ui bloat
	"buffer_font_features": {
		"liga": false
	},
	"show_whitespaces": "none",
	"indent_guides": {
		"enabled": false
	},
	"title_bar": {
		"show_user_picture": false,
		"show_onboarding_banner": false,
		"show_project_items": false,
		"show_branch_icon": false,
		"show_sign_in": false
	},
	"tab_bar": {
		"show": false,
		"show_nav_history_buttons": false
	},
	"status_bar": {
		"active_language_button": false
	},
	"toolbar": {
		"quick_actions": false
	},
	"collaboration_panel": {
		"button": false
	},
	"agent": {
		"button": false
	},
	"notification_panel": {
		"button": false
	},
	"diagnostics": {
		"button": false
	},
	"debugger": {
		"button": false
	},
	"git_panel": {
		"button": false
	},
	"search": {
		"button": false
	},
	"outline_panel": {
		"button": false
	},
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	}
}
